<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_tag keywords_search_path, class: "form-horizontal" do %>
        <div class="form-group">
          <label for="keywords-search" class="col-sm-2 control-label">Keyword</label>
          <div class="col-md-5">
            <%= text_field_tag "keywords[search]", "", class: "form-control", id: "keywords-search" %>
          </div>
        </div>
        <div class="form-group">
          <label for="country-id" class="col-md-2 control-label">Country</label>
          <div class="col-md-5">
            <%= select_tag "keywords[locations]", options_for_select(country_codes), prompt: "Select a location", class: "form-control", id: 'country-id' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-5">
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </div>
        <span id="helpBlock" class="help-block"><%= @result.count %> targeting ideas found.</span>
      <% end %>
    </div>
    <div class="col-md-6">
      <table class="table table-bordered keywords-search-volume">
        <thead>
          <tr class="active">
            <th>Keyword</td>
            <th>Country</td>
            <th>Search Volume</td>
          </th>
        </thead>
        <tbody>
          <% @result.each do |row| %>
            <tr>
              <td><%= row.keyword %></td>
              <td>United States</td>
              <td><%= row.search_volume %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
